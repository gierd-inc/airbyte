{
  "title": "ListTransactions",
  "description": "Response schema for the Amazon Selling Partner API Finances listTransactions operation",
  "type": "object",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "properties": {
    "nextToken": {
      "type": ["null", "string"],
      "description": "Token for retrieving the next page of results. Null if there are no more results."
    },
    "transactions": {
      "type": "array",
      "description": "List of transactions within the specified time period",
      "items": {
        "type": "object",
        "properties": {
          "sellingPartnerMetadata": {
            "type": "object",
            "description": "Metadata that describes the seller",
            "properties": {
              "sellingPartnerId": {
                "type": "string",
                "description": "A unique seller identifier"
              },
              "accountType": {
                "type": "string",
                "description": "The type of account in the transaction"
              },
              "marketplaceId": {
                "type": "string",
                "description": "The identifier of the marketplace where the transaction occurred"
              }
            }
          },
          "relatedIdentifiers": {
            "type": "array",
            "description": "Identifiers related to the transaction",
            "items": {
              "type": "object",
              "properties": {
                "relatedIdentifierName": {
                  "type": "string",
                  "enum": [
                    "ORDER_ID",
                    "SHIPMENT_ID",
                    "EVENT_GROUP_ID",
                    "REFUND_ID",
                    "INVOICE_ID",
                    "DISBURSEMENT_ID",
                    "TRANSFER_ID",
                    "DEFERRED_TRANSACTION_ID"
                  ]
                },
                "relatedIdentifierValue": {
                  "type": "string"
                }
              }
            }
          },
          "transactionType": {
            "type": "string",
            "description": "The type of transaction"
          },
          "transactionId": {
            "type": ["null", "string"],
            "description": "The unique identifier of the transaction"
          },
          "transactionStatus": {
            "type": "string",
            "enum": ["Deferred", "Released"],
            "description": "The status of the transaction"
          },
          "description": {
            "type": ["null", "string"],
            "description": "Describes the reasons for the transaction"
          },
          "postedDate": {
            "type": "string",
            "format": "date-time",
            "description": "The date and time when the transaction was posted"
          },
          "totalAmount": {
            "type": "object",
            "description": "The total amount of money in the transaction",
            "properties": {
              "currencyCode": {
                "type": "string",
                "description": "The three-digit currency code in ISO 4217 format"
              },
              "currencyAmount": {
                "type": "number",
                "description": "The monetary value"
              }
            }
          },
          "items": {
            "type": "array",
            "description": "List of items in the transaction",
            "items": {
              "type": "object",
              "properties": {
                "description": {
                  "type": ["null", "string"],
                  "description": "Description of the items"
                },
                "totalAmount": {
                  "type": "object",
                  "properties": {
                    "currencyCode": {
                      "type": "string"
                    },
                    "currencyAmount": {
                      "type": "number"
                    }
                  }
                },
                "contexts": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "contextType": {
                        "type": "string"
                      },
                      "asin": {
                        "type": ["null", "string"]
                      },
                      "sku": {
                        "type": ["null", "string"]
                      },
                      "quantityShipped": {
                        "type": ["null", "integer"]
                      },
                      "fulfillmentNetwork": {
                        "type": ["null", "string"]
                      }
                    }
                  }
                }
              }
            }
          },
          "marketplaceDetails": {
            "type": "object",
            "properties": {
              "marketplaceId": {
                "type": "string",
                "description": "The identifier of the marketplace where the transaction occurred"
              },
              "marketplaceName": {
                "type": "string",
                "description": "The name of the marketplace where the transaction occurred"
              }
            }
          }
        },
        "required": ["transactionType", "postedDate", "totalAmount"]
      }
    }
  },
  "required": ["transactions"]
}